<resources>

    <!-- Base application theme. -->
    <style name="Sir" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Sir.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorActionBarText</item>
        <item name="android:textColor">@color/colorActionBarText</item>
        <item name="android:editTextColor">@color/colorActionBarText</item>
        <item name="android:textColorHint">@color/colorActionBarText</item>
    </style>

    <style name="TextInputLayoutHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="EditTextHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">35sp</item>
    </style>

</resources>
